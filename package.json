{
  "name": "openlyrics-parser",
  "version": "1.0.0",
  "description": "Parses and extracts data from OpenLyrics files",
  "main": "dist/main/index.js",
  "typings": "dist/main/index.d.ts",
  "module": "dist/module/index.js",
  "homepage": "https://github.com/FiniteLooper/OpenLyrics-parser#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FiniteLooper/OpenLyrics-parser.git"
  },
  "bugs": {
    "url": "https://github.com/FiniteLooper/OpenLyrics-parser/issues"
  },
  "keywords": [
    "church",
    "lyrics",
    "song",
    "openlyrics"
  ],
  "files": [
    "dist/main",
    "dist/module",
    "!**/*.spec.*",
    "!**/*.json",
    "!**/*.tsbuildinfo*",
    "LICENSE",
    "README.md"
  ],
  "prettier": {
    "singleQuote": true,
    "printWidth": 100
  },
  "license": "MIT",
  "jest": {
    "moduleDirectories": [
      "<rootDir>/../",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "preset": "ts-jest",
    "rootDir": "./src",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    }
  },
  "scripts": {
    "build": "npm run lint && npm run test:coverage && npm run build:main && npm run build:module",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "lint": "eslint --fix src/**/*.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "jest --watch"
  },
  "dependencies": {
    "fast-xml-parser": "^4.2.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.42.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^5.0.8",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
